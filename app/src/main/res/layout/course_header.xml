<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/course_header_container"
        android:padding="15dp"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lesson_plan_text"
            android:textSize="12sp"
            android:layout_alignParentLeft="true"
            android:id="@+id/course_header_plan"
            style="@style/Base.Widget.AppCompat.Button.Colored"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_toRightOf="@id/course_header_plan"
            android:layout_height="wrap_content"
            android:padding="0dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="0dp"
                android:paddingBottom="10dp"
                android:id="@+id/course_header_prof_target"/>
        </HorizontalScrollView>
    </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="16sp"
            android:textColor="#000"
            android:text="@string/recent_articles_text"/>
    </LinearLayout>